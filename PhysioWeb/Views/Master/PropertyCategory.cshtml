@model PhysioWeb.Models.PropertyCategoryMaster
@{
	ViewBag.Title = "Property Category";
	var theme = User.FindFirst("Theme")?.Value ?? "#198754";
}

<style>
	:root {
		--theme-color: @theme;
		--sidebar-width: 280px;
		--sidebar-collapsed-width: 70px;
		--transition-speed: 0.3s;
		--primary-color: @theme;
		--secondary-color: #6c757d;
		--light-bg: #f8f9fa;
	}

</style>


<main class="dashboard-content with-sidebar collapsed">
	<div class="container-fluid mt-4">
		<div class="d-flex justify-content-between align-items-center mb-3">
			<h4 class="mb-0">Property Categories</h4>
			<button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
				<i class="bi bi-plus-circle"></i> Add Category
			</button>
		</div>
		<div class="card shadow-sm border-0">
			<div class="card-header bg-success text-white">
				<h5 class="mb-0"><i class="bi bi-building"></i>All Property Category</h5>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table id="TableList" class="table table-hover align-middle">
						<thead class="table-light">
							<tr>
								<th>Property Category</th>
								<th>InActive</th>
								<th>Created By</th>
								@*  <th><i class="bi bi-clock-history text-success fs-5" title="History"></i></th> *@
								<th><i class="bi bi-pencil-square text-primary fs-5" title="Edit"></i></th>
								<th><i class="bi bi-trash text-danger fs-5" title="Delete"></i></th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<!-- ✅ Modal for Add/Edit Property Category -->
	<div class="modal fade" id="addCategoryModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header bg-success text-white">
					<h5 class="modal-title">Add / Edit Category</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body">
					<form id="CategoryForm">
						<input type="hidden" id="UniquId" name="UniquId" />
						<div class="mb-3">
							<label class="form-label fw-bold">Category Name<span class="impMark">*</span></label>
							<input type="text" id="CategoryName" name="CategoryName" class="form-control" placeholder="Enter category name" />
						</div>
						<div class="form-check mb-3">
							<input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" value="true" checked />
							<label class="form-check-label fw-bold" for="IsActive">Is Active</label>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-outline-secondary btn-cancel" data-bs-dismiss="modal">
						<i class="bi bi-x-circle"></i> Cancel
					</button>
					<button type="button" class="btn btn-success" id="SavePropCategory">
						<i class="bi bi-save"></i> Save
					</button>
				</div>
			</div>
		</div>
	</div>
</main>
@section Scripts {
@* <script src="https://cdn.datatables.net/2.3.2/js/dataTables.min.js"></script> *@
	<script>
		$(document).ready(function () {

						$('#TableList thead tr').clone(true).appendTo('#TableList thead');

						$('#TableList thead tr:eq(1) th').each(function (i) {
							if ($(this).find('i').length === 0) { // ✅ only add input if no icon
								var title = $('#TableList thead tr:eq(0) th').eq(i).text().trim();
								$(this).html('<input class="form-control form-control-sm" type="text" placeholder="' + title + '" />');
							} else {
								$(this).html('');
							}
						});
						var TableList = $("#TableList").DataTable({
						orderCellsTop: true,
						processing: true,
						serverSide: true,
						order: [[0, "asc"]],
						ajax: {
							url: '/Master/ListPropertyCategory',
							type: 'POST' , // or 'GET' depending on your controller setup
						},
						columns: [
							{ data: 'categoryName' },
							{ data: 'inActiveText' },
							{ data: 'createdBy' },
						//     {
						//     data: null,
						//     render: function (data, type, row) {
						//         let para = row.uniquId + ',' + '"Master"' + ',' + '"PropertyType"';
						//         return `<a href="javascript:void(0)" onclick="ViewHistory(${para})">
						//                     <i class="bi bi-clock-history text-success fs-5" title="View History"></i>
						//                 </a>`;
						//     },
						//     orderable: false, searchable: false
						// },
						{
							data: null,
							render: function (data, type, row) {
								let para = `'${row.uniquId}', 'Master', 'EditPropertyCategory'`;
								return `<a href="javascript:void(0)" onclick="EditData(${para})">
											<i class="bi bi-pencil-square text-primary fs-5" title="Edit"></i>
										</a>`;
							},
							orderable: false,
							searchable: false
						},

								{
							data: null,
							render: function (data, type, row) {
								 let para = `'${row.uniquId}', 'Master', 'DeletePropertyCategory'`;
								return `<a href="javascript:void(0)" onclick="DeleteData(${para})">
											<i class="bi bi-trash text-danger fs-5" title="Delete"></i>
										</a>`;
							},
							orderable: false, searchable: false
						}
						],
						initComplete: function () {
								 var table = this.api();

				// ✅ Attach filter inputs to correct column index
				$('#TableList thead tr:eq(1) th').each(function (i) {
					$('input', this).on('keyup change', function () {
						if (table.column(i).search() !== this.value) {
							table
								.column(i)
								.search(this.value) // ✅ per-column search
								.draw();
						}
					});
				});
						}
					});
		});

		 $("#SavePropCategory").on("click", function () {
				var categoryName = $("#CategoryName").val().trim();

				if (categoryName === "") {
					notyf.error("Please enter category name");
					$("#CategoryName").focus();
					return;
				}

				$.ajax({
					url: '/Master/SavePropCategory',
					method: 'POST',
					data: $("#CategoryForm").serialize(),
					success: function (response) {
						if (response) {
							notyf.success("Category saved successfully");
							$("#addCategoryModal").modal('hide');
							ClearData();
							// Optionally reload table/list if you have one
							  $("#TableList").DataTable().ajax.reload(null, false);
						} else {
							notyf.error(response.message || "Failed to save category.");
						}
					},
					error: function (xhr) {
						console.error(xhr);
						notyf.error("Server error: " + (xhr.responseText || "Unknown error"));
					}
				});
			});


			$('.btn-cancel').on("click", function () {
				ClearData();
			});

			function ClearData() {
				$("#UniquId").val("");
				$("#CategoryName").val("");
				$("#IsActive").prop("checked", true);
			}


			 function OnSuccessOfEdit(data) {
				$("#addCategoryModal").modal('show');
				$("#UniquId").val(data.uniquId);
				$("#CategoryName").val(data.categoryName);
			   $("#IsActive").prop("checked", data.isActive);
			}

			 function OnSuccessOfDelete(){
			notyf.success("Property Category Deleted");
		}
	</script>
}
