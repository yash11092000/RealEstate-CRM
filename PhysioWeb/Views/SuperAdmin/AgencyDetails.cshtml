<style>
	.stepper {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		position: relative;
	}

		.stepper .step {
			flex: 1;
			text-align: center;
			font-weight: 500;
			color: #777;
			position: relative;
		}

			.stepper .step span {
				display: inline-block;
				width: 35px;
				height: 35px;
				line-height: 35px;
				border-radius: 50%;
				background: #dcdcdc;
				color: #fff;
				margin-bottom: 5px;
				transition: all 0.3s ease;
			}

			.stepper .step.active span {
				background: #28a745;
				transform: scale(1.1);
			}

			.stepper .step.completed span {
				background: #2ecc71;
			}

			.stepper .step::after {
				content: '';
				position: absolute;
				top: 17px;
				left: 50%;
				width: 100%;
				height: 3px;
				background: #dcdcdc;
				z-index: -1;
			}

			.stepper .step:last-child::after {
				display: none;
			}

			.stepper .step.completed::after {
				background: #2ecc71;
			}

	.gallery-container {
		display: grid;
