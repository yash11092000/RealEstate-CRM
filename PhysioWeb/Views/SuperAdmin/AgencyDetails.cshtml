				function showFilePreview(file, previewEl) {
		  // Remove any previously created PDF link
		  const linkId = previewEl.id + '_link';
		  const existingLink = document.getElementById(linkId);
		  if (existingLink) existingLink.remove();

		  if (!file) {
			previewEl.src = '#';
			previewEl.style.display = 'none';
			return;
		  }

		  const isPdf = file.type === 'application/pdf' || file.name.toLowerCase().endsWith('.pdf');

		  if (isPdf) {
			// hide <img> and show a link to open the PDF blob
			previewEl.style.display = 'none';

			const url = URL.createObjectURL(file);
			const a = document.createElement('a');
			a.id = linkId;
			a.href = url;
			a.textContent = file.name || 'Open PDF';
			a.target = '_blank';
			// append after the preview image element so layout stays consistent
			previewEl.parentNode.appendChild(a);
		  } else if (file.type.startsWith('image/')) {
			// show image preview
			const reader = new FileReader();
			reader.onload = function (ev) {
			  previewEl.src = ev.target.result;
			  previewEl.style.display = 'block';
			};
			reader.readAsDataURL(file);
		  } else {
			// unknown file type: show filename (optional)
			previewEl.style.display = 'none';
			const span = document.createElement('span');
			span.id = linkId;
			span.textContent = file.name || 'Selected file';
			previewEl.parentNode.appendChild(span);
		  }
		}

		function showProfileImageFromPath(path, previewId) {
		  const preview = document.getElementById(previewId);
		  if (!preview) return;

		  // remove any previously created link
		  const existingLink = document.getElementById(previewId + '_link');
		  if (existingLink) existingLink.remove();

		  if (!path) {
			preview.src = '#';
			preview.style.display = 'none';
			return;
		  }

		  if (/\.pdf$/i.test(path)) {
			preview.style.display = 'none';
			const a = document.createElement('a');
			a.id = previewId + '_link';
			a.href = path;
			a.textContent = 'View PDF';
			a.target = '_blank';
			preview.parentNode.appendChild(a);
		  } else {
			preview.src = path;
			preview.style.display = 'block';
		  }
		}
