@{
	ViewBag.Title = "Lead Dashboard";
	var theme = User.FindFirst("Theme")?.Value ?? "#198754";
}

<style>
	:root {
		--theme-color: @theme;
		--sidebar-width: 280px;
		--sidebar-collapsed-width: 70px;
		--transition-speed: 0.3s;
		--primary-color: @theme;
		--secondary-color: #6c757d;
		--light-bg: #f8f9fa;
		--accent: @theme;
		--dark: #0d3b22;
		--success: @theme;
		--warning: #f39c12;
		--danger: #e74c3c;
		--info: #3498db;
		--gray: #7f8c8d;
		--light-gray: #bdc3c7;
		--gold: #f1c40f;
	}

	/* body {
